USER=`whoami`
CURRENTSHELL=`grep $USER /etc/passwd|cut -d : -f 7`

. ./common_functions

set -e

fancy_echo "Updating system packages ..."
  successfully pacman_noconfirm -Syu

echo "Curent shell: $CURRENTSHELL"
if [ "$CURRENTSHELL" != "/bin/zsh" ];
  then
    fancy_echo "Installing zsh ..."
      successfully install_packages zsh

    fancy_echo "Changing your shell to zsh ..."
      successfully chsh -s `which zsh`

    fancy_echo "Your shell will now restart to apply changes."
      exec `which zsh` -l
else
  notice "You're already running zsh. Good job, buddy!"
fi

if !(command_exists packer);
  then
    fancy_echo "Installing packer"
      (cd packer && makepkg -f && sudo pacman -U packer*.pkg.tar.xz) || bail
else
  notice "You're already running packer. You must be good at this!"
fi
